<div class="info-tag-container {{class}}">
    {{#if icon}}
    <i class="fa {{icon}}"></i>
    {{/if}}

    {{#if url}}
        <h6 class="info-text">
            <a href="{{#if isEmail}}mailto:{{/if}}{{url}}" target="_blank">
                {{removeProtocol text}}
                {{!-- <i class="fa fa-external-link" aria-hidden="true"></i> --}}
            </a>
        </h6>
    {{else}}
        <span class="info-text">{{{text}}}</span>
    {{/if}}
</div>
